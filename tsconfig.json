/**
 * If TypeScript suddenly starts complaining about literally every import, try
 * upgrading Vite and Yarn.
 *
 *  yarn add -D vite vite-plugin-ruby @vitejs/plugin-react
 *  yarn set version latest
 */
{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./client/*"]
    },

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "strict": true
  },
  "include": ["client"]
}
