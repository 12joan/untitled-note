<% content_for :head do %>
  <%= prevent_fouc_tags %>
<% end %>

<main class="mt-5 p-5 narrow-lg space-y-10">
  <h1 class="text-2xl/snug xs:text-3xl/snug sm:text-4xl/snug md:text-5xl/snug font-semibold text-balance text-center">
    An open-source app for taking notes that feels <span class="underline underline-offset-[0.125em] decoration-primary-500 dark:decoration-primary-400 window-inactive:decoration-plain-500 dark:window-inactive:decoration-plain-400 decoration-[0.125em]">awesome</span> to use
  </h1>

  <div class="relative drop-shadow-lg">
    <div class="absolute top-[2.395470383%] bottom-[12.06445993%] left-[10.25506179%] right-[10.22876676%] z-[-1] bg-black">
      <%=
        video_tag 'demo.mp4',
          controls: true,
          autoplay: true,
          loop: true,
          'aria-label': 'Demo video showing Untitled Note App in use',
          class: 'demo-video'
        %>
    </div>
    <%= image_tag 'mac_frame.png', 'aria-hidden': true, class: 'pointer-events-none' %>
  </div>

  <div class="bg-plain-100 dark:bg-plain-800 p-5 rounded-lg space-y-3">
    <h2 class="h2">Host your own instance</h2>
    <p class="text-lg">
      Untitled Note App is designed to be self-hosted using Docker.
    </p>
    <p>
      <%= styled_button_to 'Self-hosting guide', '/docs/self-hosting' %>
    </p>
</main>
