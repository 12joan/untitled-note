<%- if links.include?(:sign_in) %>
  <%= styled_link_to 'Sign in', new_session_path(resource_name) %>
<% end %>

<%- if links.include?(:sign_up) %>
  <%= styled_link_to 'Create account', new_registration_path(resource_name) %>
<% end %>

<%- if links.include?(:forgot_password) %>
  <%= styled_link_to 'Forgot your password?', new_password_path(resource_name) %>
<% end %>

<%- if links.include?(:confirm_email) %>
  <%= styled_link_to 'Resend confirmation email', new_confirmation_path(resource_name) %>
<% end %>
